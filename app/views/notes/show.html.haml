#ctrllr-notes
  #notes-show
    %h2
      - if @note.is_input?
        = t('labels.Note_input')
      - else
        = t('labels.Note_output')
    %p
      %strong= t('labels.senders')      
      = @note.senders.map{|s| s.entity.fullname}.join("; ") unless @note.senders.nil?
      = @note.sender_text unless @note.sender_text.blank?
    %p
      %strong= t('labels.recipients')
      = @note.recipients.map{|s| s.entity.fullname}.join("; ") unless @note.recipients.nil?
      = @note.recipient_text unless @note.recipient_text.blank?
    %p
      %strong= t('labels.code')
      = @note.code
    %p
      %strong= t('labels.description')
      = @note.description
    %p
      %strong= t('labels.observation')
      = @note.observation
    %p
      %strong= t('labels.system_status')
      = t("documents.system_status.#{@note.system_status}")
    %p
      %strong= t('labels.emission_date')
      = l @note.emission_date, format: :short
      
    %p
      %strong= t('labels.entry_at')
      = l  @note.entry_at, format: :short
    %p
      %strong= t('labels.reference_people')
      = @note.reference_people
    %p
      %strong= t('labels.folder')
      = @note.folder.present? ? @note.folder.path : '/'
