.row
  .col-title
    .row
      .col-md-5
        %h1= t('.title')
      .col-md-7
        - if edit_or_new_page?(@note)
          - if @note.is_input?
            %h2= t(".sub_title.#{action_name}_input")
          - else
            %h2= t(".sub_title.#{action_name}_output")
        - else
          %h2= t(".sub_title.#{action_name}")
  .col-buttons
    - if edit_or_new_page?(@note)
      = link_to t('notes.buttons.index'), notes_path, :class=>"btn btn-info"
    - elsif index_page? && can?(:edit, Note)
      = link_to t('notes.buttons.new'), new_note_path, :class=>"btn btn-info"
    - elsif show_page?(@note) && can?(:edit, @note)
      = link_to t('notes.buttons.edit'), edit_note_path(@note), :class=>"btn btn-info"
      = link_to t('notes.buttons.index'), notes_path, :class=>"btn btn-info"


