#modal-forms
  %button.btn.btn-default#btn-open-new-employment{:type => "button"}
    %span.glyphicon.glyphicon-briefcase
    = t('labels.employment')
  %button.btn.btn-default#btn-open-new-master_unit{:type => "button"}
