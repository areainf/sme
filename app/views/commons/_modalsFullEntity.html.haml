  %button.btn.btn-default#btn-open-new-person{:type => "button"}
    %span.glyphicon.glyphicon-user
    = t('labels.person')
  #modal-forms-employment
    #modal-employment.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            %button{:type=>"button", :class=>"close","data-dismiss"=>"modal", "aria-hidden"=>"true"}
              &times;
            %h4.modal-title= t('employments.new.title')
          .modal-body
            #employment-remote-error
            #employment-remote-form
          .modal-footer
            %button.btn.btn-default#employment-save{:type => "button"}
              = t('buttons.save')
            %button.btn.btn-default#employment-close{:type => "button", "data-dismiss"=>"modal"}
