#ctrllr-documents
  #documents-show
    %h2
      - label_type = "labels.#{@document.type}"
      - if @document.is_input?
        = t("#{label_type}_input")
      - else
        = t("#{label_type}_output")
    %p
      %strong= t('labels.senders')      
      = @document.senders.map{|s| s.entity.fullname}.join("; ") unless @document.senders.nil?
    %p
      %strong= t('labels.recipients')
      = @document.recipients.map{|s| s.entity.fullname}.join("; ") unless @document.recipients.nil?
    %p
      %strong= t('labels.code')
      = @document.code
    %p
      %strong= t('labels.description')
      = @document.description
    %p
      %strong= t('labels.observation')
      = @document.observation
    %p
      %strong= t('labels.system_status')
      = t("documents.system_status.#{@document.system_status}")
    %p
      %strong= t('labels.emission_date')
      = l @document.emission_date, format: :short
      
    %p
      %strong= t('labels.entry_at')
      = l  @document.entry_at, format: :short
    %p
      %strong= t('labels.reference_people')
      = @document.reference_people
    %p
      %strong= t('labels.folder')
      = @document.folder.present? ? @document.folder.path : '/'
