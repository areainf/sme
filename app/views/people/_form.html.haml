= form_for(@person, html: { "data-parsley-validate" => ''}) do |f|
  - if @person.errors.any? 
    #error_explanation
      %h2
        = pluralize(@person.errors.count, "error")
        prohibited this person from being saved:

      %ul
      - @person.errors.full_messages.each do |message|
        %li= message

  .field
    = f.label :firstname, t("labels.firstname")
    = f.text_field :firstname, {'data-parsley-group' => 'block_person', required: ''}
  .field
    = f.label :lastname, t("labels.lastname")
    = f.text_field :lastname

  .action_container
    = f.submit t('buttons.accept'), {:class=>"btn-confirm"}

