.row
  .col-title
    .row
      .col-md-5
        %h1= t('.title')      
      .col-md-7
        %h2= t(".sub_title.#{action_name}")
  .col-buttons
    - if edit_or_new_page?(@person) || show_page?(@person)
      - if show_page?(@person)
        = link_to t('people.buttons.edit'), edit_person_path(@person), :class=>"btn btn-success"
      = link_to t('people.buttons.index'), people_path, :class=>"btn btn-info"
    - elsif index_page?
      = link_to t('people.buttons.new'), new_person_path, :class=>"btn btn-info"
    
  
