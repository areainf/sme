= form_for(@employment, html: { "data-parsley-validate" => ''}) do |f|
  - if @employment.errors.any? 
    #error_explanation
      %h2
        = pluralize(@employment.errors.count, "error")
        prohibited this employment from being saved:

      %ul
      - @employment.errors.full_messages.each do |message|
        %li= message

  .field
    = f.label :name, t("labels.name")
    = f.text_field :name, {'data-parsley-group' => 'block_employment', required: ''}
  .action_container
    = f.submit t('buttons.accept'), {:class=>"btn-confirm"}

