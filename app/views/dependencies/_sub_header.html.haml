.row
  .col-title
    .row
      .col-md-5
        %h1= t('.title')      
      .col-md-7
        %h2= t(".sub_title.#{action_name}")
  .col-buttons
    - if edit_or_new_page?(@dependency)
      = link_to t('dependencies.buttons.index'), dependencies_path, :class=>"btn btn-info"
    - elsif index_page?
      = link_to t('dependencies.buttons.new'), new_dependency_path, :class=>"btn btn-info"
    -elsif show_page?(@dependency)
      = link_to t('dependencies.buttons.edit'), edit_dependency_path(@dependency), :class=>"btn btn-info"
      = link_to t('dependencies.buttons.index'), dependencies_path, :class=>"btn btn-info"
    
  
